{
  "name": "angular-for-production",
  "version": "1.0.0",
  "description": "Simple angular hello world app to demonstrate some production good practices",
  "scripts": {
    "build": "tsc",
    "rollup": "rollup -f iife -c rollup.config.js -o dist/bundle.es2015.js",
    "es5": "tsc --target es5 --allowJs dist/bundle.es2015.js --out dist/bundle.js",
    "build:prod": "npm run clean && npm run build && npm run rollup && npm run es5 && npm run minify",
    "build:watch": "tsc -w",
    "serve": "http-server . -p 8000",
    "start": "concurrently \"npm run build\" \"npm run serve\"",
    "start:prod": "npm run build:prod && npm run serve",
    "start:watch": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "clean": "rimraf ./dist",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js"
  },
  "keywords": [
    "Angular",
    "production"
  ],
  "author": "Oussama Zaki",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "core-js": "^2.4.1",
    "rxjs": "5.0.1",
    "rxjs-es": "^5.0.0-beta.12",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/node": "^6.0.46",
    "concurrently": "^3.2.0",
    "http-server": "^0.9.0",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "tslint": "^3.15.1",
    "typescript": "~2.0.10",
    "uglifyjs": "^2.4.10"
  },
  "repository": {}
}
